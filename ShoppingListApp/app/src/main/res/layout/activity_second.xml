            <Button
                android:id="@+id/pears_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pears_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/pineapples_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pineapples_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/plums_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plums_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/pomegranate_item"
                android:layout_width="match_parent"
