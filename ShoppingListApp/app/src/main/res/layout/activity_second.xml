                android:onClick="sendItem"/>

            <Button
                android:id="@+id/watermelon_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/watermelon_item"
                android:onClick="sendItem"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>