                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apples_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/apricots_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apricots_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/bananas_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bananas_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/blueberries_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blueberries_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/cantaloupe_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cantaloupe_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/cherries_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cherries_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/grapefruits_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grapefruits_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/honeydew_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/honeydew_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/lemons_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lemons_item"
                android:onClick="sendItem"/>

            <Button
                android:id="@+id/mangos_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
